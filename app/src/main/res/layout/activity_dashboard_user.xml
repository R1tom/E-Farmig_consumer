<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardUser"
    android:orientation="vertical"
    android:background="#FFFF">

    <ImageView
        android:layout_width="match_parent"

        android:layout_height="325dp"
        android:background="@drawable/dash"></ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:background="@drawable/downl"
                android:layout_width="120dp"
                android:layout_height="120dp"></ImageView>
            <TextView
                android:text="FARMING TABLE"
                android:textSize="20dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:text="Available items listed below "
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <ScrollView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:onClick="potato"
                        android:scaleType="centerCrop"
                        android:src="@drawable/potato"></ImageButton>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="12dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:onClick="brinjal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/brinjal"></ImageButton>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="12dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:onClick="cabbage"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cabbage"></ImageButton>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageButton

                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:clickable="true"
                        android:adjustViewBounds="true"
                        android:onClick="onion"
                        android:padding="20dp"
                        android:scaleType="center"
                        android:src="@drawable/onion"></ImageButton>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="12dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:onClick="carrot"
                        android:scaleType="centerCrop"
                        android:src="@drawable/carrot"></ImageButton>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="12dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorAccent"
                        android:clickable="true"
                        android:onClick="cauli"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cauli"></ImageButton>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>